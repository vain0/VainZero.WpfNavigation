<Window
    x:Class="VainZero.WpfNavigation.Demo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:demo="clr-namespace:VainZero.WpfNavigation.Demo"
    mc:Ignorable="d"
    Width="525"
    Height="350"
    Title="VainZero.WpfNavigation"
    >
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Frame -->
                <ResourceDictionary Source="Frame/FrameTemplate.xaml" />
                <ResourceDictionary Source="Frame/HistoryTemplate.xaml" />

                <!-- Front -->
                <ResourceDictionary Source="Front/LoginPageTemplate.xaml" />
                <ResourceDictionary Source="Front/MenuPageTemplate.xaml" />

                <!-- Users -->
                <ResourceDictionary Source="Users/UserListPageTemplate.xaml" />
                <ResourceDictionary Source="Users/UserDetailPageTemplate.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Window.Content>
        <demo:Frame />
    </Window.Content>
</Window>
