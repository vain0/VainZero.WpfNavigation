<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:demo="clr-namespace:VainZero.WpfNavigation.Demo"
    >
    <DataTemplate DataType="{x:Type demo:MenuPage}">
        <DataTemplate.Resources>
            <Style TargetType="Button">
                <Setter Property="Margin" Value="10,5,10,5" />
                <Setter Property="MinWidth" Value="120" />
            </Style>
        </DataTemplate.Resources>
        <Grid>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Content="Users" Command="{Binding UsersCommand}" />
                <Button Content="Config" IsEnabled="False" />
                <Button Content="Settings" IsEnabled="False" />
                <Button Content="Preferences" IsEnabled="False" />
            </StackPanel>
        </Grid>
    </DataTemplate>
</ResourceDictionary>
